# EventPass Pro Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
POSTGRES_DB=eventpass_pro
POSTGRES_USER=eventpass_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgres://eventpass_user:your_secure_password_here@postgres:5432/eventpass_pro?sslmode=disable
REPLICA_DATABASE_URL=postgres://eventpass_user:your_secure_password_here@replica:5432/eventpass_pro_replica?sslmode=disable
LIBSQL_URL=http://libsql:8080/eventpass_pro.db

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_URL=amqp://user:password@rabbitmq:5672/

# MinIO Configuration (S3-compatible object storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY_ID=minioadmin
MINIO_SECRET_ACCESS_KEY=minioadminpassword
MINIO_BUCKET_NAME=eventpass-qrcodes
MINIO_SECURE=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# HMAC Secret for QR Code Security
HMAC_SECRET=your_hmac_secret_key_here_for_qr_code_signing

# Application Configuration
PORT=8080
BASE_URL=https://localhost:8080

# Frontend Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_GATEWAY_URL=
GRAFANA_URL=http://localhost:3001

# Email Configuration (Optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# WhatsApp/Twilio Configuration (Optional - for notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SendGrid Configuration (Optional - for email notifications)
SENDGRID_API_KEY=

# Development Settings
NODE_ENV=development
GO_ENV=development

# Security Settings
CORS_ORIGINS=http://localhost:3000,https://localhost:8080
RATE_LIMIT_REQUESTS_PER_MINUTE=100
TLS_CERT_FILE=
TLS_KEY_FILE=

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=false
ENABLE_GDPR_COMPLIANCE=true
ENABLE_AUDIT_LOGGING=true