{
	"name": "Eventpass Dev Environment",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/nix:1": {}
	},
	"forwardPorts": [ 3000, 8080, 9000, 9001, 5432 ],

	// This command runs ONCE when the container is created.
	// It adds a line to the user's .bashrc file, so every new terminal automatically starts inside the nix-shell.
	"postCreateCommand": "echo 'exec nix-shell .idx/dev.nix' >> ~/.bashrc",

	// The postStartCommand has been moved to the post-create.sh script for reliability.
	"postStartCommand": "bash .devcontainer/post-create.sh",

	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"dbaeumer.vscode-eslint"
			]
		}
	},
	"remoteUser": "vscode"
}
