{
  "dashboard": {
    "id": null,
    "title": "EventPass Pro - Logging Dashboard",
    "tags": ["eventpass", "logging"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Log Volume by Level",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(rate(eventpass_logs_total[5m])) by (level)",
            "legendFormat": "{{level}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Log Rate Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(eventpass_logs_total[5m])",
            "legendFormat": "Total logs per second"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(eventpass_logs_total{level=\"error\"}[5m]) / rate(eventpass_logs_total[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "max": 1,
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Recent Error Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{level=\"error\"} |= \"eventpass\"",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 8}
      },
      {
        "id": 5,
        "title": "Logs by Service",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum(rate(eventpass_logs_total[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Request Duration vs Log Level",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(eventpass_logs_total[5m])) by (level)",
            "legendFormat": "{{level}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}